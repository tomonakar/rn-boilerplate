{
  "extends": ["standard", "prettier", "prettier/react"],
  "plugins": [
    "react",
    "jsx-a11y",
    "import",
    "prettier"
  ],
  "globals": {
    "fetch": false
  },
  "rules": {
    "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "semi": false
        }
      ],
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "linebreak-style": [
      "error"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "never"
    ],
    "react/jsx-uses-vars": 1,
    "no-console": "warn",
    "no-unused-vars": [
      1,
      {
        "vars": "all",
        "args": "after-used"
      }
    ],
    "space-before-function-paren": 0,
    "no-duplicate-imports": 0,
    "react/jsx-uses-react": 1
  },
  "parser": "babel-eslint"
}